alias: "Lights - Stairs (Off)"
initial_state: True
hide_entity: False

trigger:
  - platform: time
    at: '20:30:00'

action:
  - service: tts.google_say
    data:
      entity_id:
        - media_player.lounge_speaker
      message: Turning off stair lights
  
  - service: switch.turn_off
    data:
      entity_id:
        - switch.sonoff_mini